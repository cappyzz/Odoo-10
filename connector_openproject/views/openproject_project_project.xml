<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_openproject_project_project_tree" model="ir.ui.view">
    <field name="name">openproject.project.project.tree</field>
    <field name="model">openproject.project.project</field>
    <field name="arch" type="xml">
        <tree editable="top" create="false">
            <field name="op_sync"/>
            <field name="openproject_id"/>
            <field name="name" string="Name"/>
            <field name="sync_activities"/>
            <field name="sync_wp_description"/>
            <field name="op_create_date"/>
            <field name="op_write_date"/>
            <field name="last_work_package_update"/>
            <field name="last_time_entry_update"/>
            <button string="Open External URL" type="object" name="action_open_external_url" icon="fa-external-link"/>
        </tree>
    </field>
</record>

<record id="view_openproject_project_project_search" model="ir.ui.view">
    <field name="name">openproject.project.project.search</field>
    <field name="model">openproject.project.project</field>
    <field name="arch" type="xml">
        <search string="OpenProject Projects">
            <field name="openproject_id" string="Project ID"/>
            <field name="name" string="Name"/>
            <separator/>
            <filter string="Sync Enabled" name="sync_enabled" domain="[('op_sync', '=', True)]"/>
        </search>
    </field>
</record>

</odoo>
